int matrixElementsSum(int[][] matrix) {
    int cols= matrix[0].length;
    int[] flatenArray= Arrays.stream(matrix).flatMapToInt(Arrays::stream).toArray();
    for (int i=0; i<flatenArray.length-cols; i++){
        if(flatenArray[i]==0){
            flatenArray[i+cols]=0;
        }
    }
    return Arrays.stream(flatenArray).sum();
}
